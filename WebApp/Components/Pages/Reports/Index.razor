@page "/project/{ProjectId:int}/reports"
@inject ILogger<Index> Logger
@rendermode InteractiveServer

<RadzenStack Style="width: 100vw; height: 100vh; max-width: 100%; max-height: 100%; box-sizing: border-box;">
    <!-- First Row -->
    <div style="display: flex; width: 100%; height: 50%;">
        <!-- First Chart -->
        <RequirementsTestCasesChart ProjectId="ProjectId"/>

        <!-- Second Chart -->
        <TestPlansTestCasesChart ProjectId="ProjectId"/>
    </div>

    <!-- Second Row -->
    <div style="display: flex; width: 100%; height: 50%;">
        <!-- Third Chart -->
        <TestExecutionsChart ProjectId="ProjectId"/>

        <!-- Fourth Chart -->
        <RequirementsTestCasesChart ProjectId="ProjectId"/>
    </div>
</RadzenStack>


@code {
    [Parameter] public int ProjectId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var user = await UserService.GetCurrentUserNameAsync();
        Logger.LogInformation($"{user} is viewing the reports for project {ProjectId}");
    }

}

<div style="margin-top: 10px;">
    <RadzenButton Text="Edit" Click="EditUrl"/>
    <RadzenButton Text="Back" Click="CancelUrl"/>
</div>


@code{

    /// <summary>
    ///     Entity name as string (e.g. testplans, testcases, etc.)
    /// </summary>
    [Parameter]
    public required string EntityName { get; set; }

    /// <summary>
    ///     Entity Id as integer
    /// </summary>
    [Parameter]
    public int EntityId { get; set; }

    [EditorRequired] [Parameter] public int ProjectId { get; set; }


    private void CancelUrl()
    {
        var url = $"project/{ProjectId}/{EntityName}";
        NavigationManager.NavigateTo(url, true);
    }

    private void EditUrl()
    {
        var url = $"project/{ProjectId}/{EntityName}/edit/{EntityId}";
        NavigationManager.NavigateTo(url, true);
    }

}
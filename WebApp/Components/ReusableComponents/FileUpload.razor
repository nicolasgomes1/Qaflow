@using Microsoft.AspNetCore.Components.Forms
<RadzenRow Gap="2rem" RowGap="2rem" class="rz-m-0 rz-m-md-12">
    <RadzenColumn Size="12" SizeMD="4">
        <RadzenCard Variant="Variant.Outlined">
            <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Files upload</RadzenText>
            <RadzenUpload Multiple="true" Progress="@OnProgress" Change="@HandleFileSelected" Style="width: 100%"/>
        </RadzenCard>
    </RadzenColumn>
</RadzenRow>

@code{
    
    /// <summary>
    /// List of uploaded files using IBrowserFile
    /// </summary>
    [Parameter] public List<IBrowserFile>? UploadedFiles { get; set; }

    private void HandleFileSelected(UploadChangeEventArgs args)
    {
        if (UploadedFiles == null) return;
        UploadedFiles.Clear();
        foreach (var file in args.Files)
        {
            UploadedFiles.Add(file);
        }
    }

    static void OnProgress(UploadProgressArgs args)
    {
        Console.WriteLine($"{args.Progress}% - {args.Loaded}/{args.Total} bytes");
    }

}